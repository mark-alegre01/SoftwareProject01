{
  "name": "boarding-house-payment-monitor",
  "version": "1.0.0",
  "description": "A web app for boarding house payment and monitoring system with separate interfaces for landlords and boarders",
  "type": "module",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js"
  },
  "keywords": [
    "boarding-house",
    "payment",
    "monitoring"
  ],
  "author": "Mark Anthony Alegre",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "lowdb": "^3.0.0"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^3.0.2"
  }
}
